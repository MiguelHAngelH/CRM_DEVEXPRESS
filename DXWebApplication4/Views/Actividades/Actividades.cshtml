@{
    ViewBag.Title = "Index";
}


<div ng-app="myApp" ng-controller="myNgController">
    @* Angular template for modal dialog*@
    <script type="text/ng-template" id="modalContent.html">
        <div class="modal-header">
            <h3 class="modal-title">Events</h3>
        </div>
        <div class="modal-body">
            <div class="error">{{Message}}</div>
            <div class="form-group">
                <label>Event Title : </label>
                <input type="text" ng-model="NewEvent.title" autofocus class="form-control" />
            </div>
            <div class="form-group">
                <label>Description : </label>
                <input type="text" ng-model="NewEvent.description" class="form-control" />
            </div>
            <div class="form-group">
                <label>Time Slot : </label>
                <span>{{NewEvent.StartAt}} - {{NewEvent.EndAt}}</span>
            </div>
            <div class="form-group">
                <select ng-model="model.selected">
                    <option value="a">a</option>
                    <option value="b" ng-selected="true">b</option>
                    <option value="c">c</option>
                </select>
            </div>
        </div>
        <div class="modal-footer">
            <button class="btn btn-primary" type="button" ng-click="ok()">Save</button>
            <button class="btn btn-danger" type="button" ng-show="NewEvent.idActividad > 0" ng-click="delete()">Delete</button>
            <button class="btn btn-warning" type="button" ng-click="cancel()">Cancel</button>

        </div>
    </script>
    <div class="row">
        <div class="col-md-12">
            <div id="calendar" ui-calendar="uiConfig.calendar" ng-model="eventSources" calendar="myCalendar"></div>
        </div>
        @*<div class="col-md-4">
                <div ng-show="SelectedEvent" class="alert alert-success" style="margin-top:50px">
                    <h2 style="margin-top:0px"> Selected Event:</h2>
                    <h3 style="color:#A9A50E">{{SelectedEvent.title}}</h3>
                    <p>{{SelectedEvent.description}}</p>
                </div>
            </div>*@
    </div>
</div>

